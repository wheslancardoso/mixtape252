---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { sanityClient, urlFor } from '../../lib/sanity';

export async function getStaticPaths() {
  const drops = await sanityClient.fetch(`
    *[_type == "drop"]{
      slug,
      title,
      publishedAt,
      coverImage,
      editorial,
      "featuredPosts": featuredPosts[]->{
        title,
        slug,
        mainImage,
        excerpt,
        publishedAt
      }
    }
  `);

  return drops.map((drop: any) => ({
    params: { slug: drop.slug.current },
    props: { drop },
  }));
}

interface Props {
  drop: any;
}

const { drop } = Astro.props;

// Prepara description para meta tags
const description = drop.editorial 
  ? drop.editorial.substring(0, 160) + (drop.editorial.length > 160 ? '...' : '')
  : `Edição ${drop.title} do Mixtape252`;

// Função para gerar rotações aleatórias nos cards (estilo colagem)
function getRotation(index: number) {
  const rotations = ['rotate-1', '-rotate-2', 'rotate-2', '-rotate-1', 'rotate-0'];
  return rotations[index % rotations.length];
}
---

<BaseLayout title={`${drop.title} // MIXTAPE252`} description={description}>
  <article class="min-h-screen bg-paper text-ink">
    <!-- Header: Cover Image ou Título Gigante -->
    <header class="relative w-full border-b-4 border-ink overflow-hidden">
      {drop.coverImage ? (
        <div class="w-full h-[70vh] md:h-[80vh] relative">
          <img
            src={urlFor(drop.coverImage).width(1920).height(1080).fit('crop').url()}
            alt={drop.title}
            class="w-full h-full object-cover grayscale contrast-125"
          />
          <div class="absolute inset-0 bg-gradient-to-b from-transparent via-transparent to-ink/60"></div>
          <div class="absolute bottom-0 left-0 right-0 p-8 md:p-16">
            <div class="max-w-7xl mx-auto">
              <span class="font-mono text-sm bg-safety-orange text-white inline-block px-3 py-1 uppercase mb-4 border-2 border-ink">
                {new Date(drop.publishedAt).toLocaleDateString('pt-BR', {
                  day: '2-digit',
                  month: 'long',
                  year: 'numeric'
                })}
              </span>
              <h1 class="text-6xl md:text-9xl font-headline uppercase leading-[0.85] tracking-tighter text-white drop-shadow-[8px_8px_0px_rgba(0,0,0,0.8)] transform -rotate-1">
                {drop.title}
              </h1>
            </div>
          </div>
        </div>
      ) : (
        <div class="w-full min-h-[60vh] bg-ink text-paper flex items-center justify-center p-8 md:p-16">
          <h1 class="text-6xl md:text-9xl font-headline uppercase leading-[0.85] tracking-tighter transform rotate-1">
            {drop.title}
          </h1>
        </div>
      )}
    </header>

    <!-- Editorial: Bloco de Texto Preto -->
    {drop.editorial && (
      <section class="bg-ink text-paper py-16 md:py-24 px-4 md:px-8 border-b-4 border-ink">
        <div class="max-w-4xl mx-auto">
          <div class="font-mono text-lg md:text-xl leading-relaxed whitespace-pre-line">
            {drop.editorial}
          </div>
        </div>
      </section>
    )}

    <!-- Grid de Posts -->
    <section class="py-16 md:py-24 px-4 md:px-8">
      <div class="max-w-7xl mx-auto">
        <div class="mb-12 flex items-center gap-4">
          <h2 class="text-4xl md:text-6xl font-headline uppercase bg-white border-4 border-ink px-4 py-2 inline-block shadow-hard transform -rotate-2">
            CONTEÚDO
          </h2>
          <div class="flex-grow h-1 bg-ink"></div>
        </div>

        {drop.featuredPosts && drop.featuredPosts.length > 0 ? (
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 md:gap-12">
            {drop.featuredPosts.map((post: any, index: number) => (
              <a
                href={`/post/${post.slug.current}`}
                class={`group block relative bg-white border-4 border-ink h-full hover:z-20 hover:scale-105 transition-all duration-300 shadow-hard hover:shadow-hard-lg hover:bg-safety-orange hover:text-white ${getRotation(index)}`}
              >
                <!-- Imagem do Post -->
                <div class="aspect-square border-b-4 border-ink overflow-hidden relative">
                  {post.mainImage ? (
                    <img
                      src={urlFor(post.mainImage).width(600).height(600).fit('crop').url()}
                      alt={post.title}
                      class="w-full h-full object-cover grayscale contrast-125 group-hover:grayscale-0 transition-all duration-500 scale-100 group-hover:scale-110"
                    />
                  ) : (
                    <div class="w-full h-full flex items-center justify-center bg-neutral-200 font-mono text-ink group-hover:bg-safety-orange group-hover:text-white">
                      NO SIGNAL
                    </div>
                  )}
                  <div class="absolute top-0 right-0 bg-safety-orange text-white text-xs font-mono px-3 py-1 border-b-4 border-l-4 border-ink group-hover:bg-ink">
                    {new Date(post.publishedAt).toLocaleDateString('pt-BR')}
                  </div>
                </div>

                <!-- Conteúdo do Card -->
                <div class="p-6 flex flex-col gap-4">
                  <h3 class="text-2xl md:text-3xl font-headline uppercase leading-[0.9] group-hover:text-white transition-colors">
                    {post.title}
                  </h3>
                  {post.excerpt && (
                    <p class="font-mono text-xs md:text-sm leading-tight line-clamp-3 border-l-2 border-ink pl-3 group-hover:border-white">
                      {post.excerpt}
                    </p>
                  )}
                  <div class="pt-4 flex justify-end">
                    <span class="inline-block px-3 py-1 bg-ink text-white font-mono text-xs uppercase group-hover:bg-white group-hover:text-ink transition-colors border-2 border-ink group-hover:border-white">
                      LER MAIS_
                    </span>
                  </div>
                </div>
              </a>
            ))}
          </div>
        ) : (
          <div class="text-center py-16 border-4 border-ink bg-white p-8">
            <p class="font-mono text-xl text-ink">
              Nenhum post selecionado para esta edição.
            </p>
          </div>
        )}
      </div>
    </section>

    <!-- Divisor ASCII -->
    <div class="py-8 px-4 text-center border-y-4 border-ink bg-ink text-paper">
      <div class="font-mono text-sm md:text-base tracking-widest">
        //====//====//====//====//====//====//
      </div>
    </div>

    <!-- Navegação: Botão Voltar -->
    <section class="py-16 px-4 text-center">
      <a
        href="/"
        class="inline-block px-8 py-4 bg-ink text-paper font-headline uppercase text-2xl md:text-3xl hover:bg-safety-orange hover:text-ink transition-all shadow-hard transform hover:-rotate-1 border-4 border-ink"
      >
        ← VOLTAR PARA O CAOS
      </a>
    </section>
  </article>
</BaseLayout>

