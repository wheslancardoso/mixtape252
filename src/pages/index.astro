---
import BaseLayout from '../layouts/BaseLayout.astro';
import { sanityClient, urlFor } from '../lib/sanity';
import Newsletter from '../components/Newsletter.astro';

const posts = await sanityClient.fetch(`*[_type == "post"] | order(publishedAt desc){
  title, 
  slug, 
  publishedAt, 
  mainImage, 
  excerpt
}`);
---

<BaseLayout title="MIXTAPE252 // MANIFESTO">
    
    <div class="bg-ink text-paper py-2 border-b-4 border-ink overflow-hidden marquee-container">
        <div class="marquee-content font-headline text-lg tracking-widest uppercase">
            // BEM-VINDO AO CAOS // ARTE SEM PERMISSÃO // MIXTAPE252 // 2025 // BEM-VINDO AO CAOS // ARTE SEM PERMISSÃO // MIXTAPE252 // 2025 // BEM-VINDO AO CAOS // ARTE SEM PERMISSÃO // MIXTAPE252 // 2025
        </div>
    </div>

    <header class="w-full max-w-7xl mx-auto p-4 flex flex-col md:flex-row justify-between items-center border-b-4 border-ink mb-8 md:mb-16 bg-white relative z-10 transform -rotate-1 shadow-hard-sm">
        <h1 class="text-4xl md:text-6xl font-headline tracking-tighter uppercase mb-4 md:mb-0 hover:text-safety-orange transition-colors cursor-pointer">
            Mixtape252
        </h1>
        <nav>
            <ul class="flex space-x-6 md:space-x-12 font-bold text-lg md:text-xl tracking-tight font-headline">
                <li><a href="/sobre" class="hover:bg-ink hover:text-safety-orange px-2 py-1 transition-all">MANIFESTO</a></li>
                <li><a href="#drops" class="hover:bg-ink hover:text-safety-orange px-2 py-1 transition-all">ZINE</a></li>
                <li><a href="/sobre" class="hover:bg-ink hover:text-safety-orange px-2 py-1 transition-all">CONTATO</a></li>
            </ul>
        </nav>
    </header>

    <main class="flex-grow w-full max-w-6xl mx-auto px-4 relative z-10">
        <section class="mb-16 flex flex-col md:flex-row gap-8 items-start">
            <div class="w-full md:w-2/3">
                <h2 class="text-5xl md:text-7xl lg:text-8xl font-headline leading-[0.95] uppercase mb-8 drop-shadow-md">
                    Arte com <span class="text-safety-orange bg-ink px-2">Verdade</span> <br>& Caos Controlado
                </h2>
                
                <div class="border-l-8 border-safety-orange pl-6 py-2 mb-8 bg-white border-4 border-ink p-6 shadow-hard rotate-1">
                    <ul class="font-headline text-xl md:text-2xl space-y-2 uppercase tracking-wide">
                        <li class="flex items-center gap-2">01. CRIAMOS COMO COLETIVO.</li>
                        <li class="flex items-center gap-2">02. AGIMOS COMO AGÊNCIA.</li>
                        <li class="flex items-center gap-2">03. PENSAMOS COMO BANDA PUNK.</li>
                    </ul>
                </div>

                <p class="text-lg md:text-xl mb-10 max-w-xl font-bold border-b-2 border-ink inline-block pb-1">
                    Sem pressão de métrica. Sem algoritmo no pescoço. Apenas o que importa.
                </p>

                <a 
                    href="https://instagram.com/mixtape252" 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="inline-block btn-press bg-safety-orange text-ink border-4 border-ink px-6 py-3 text-xl font-headline uppercase tracking-wider shadow-hard hover:bg-ink hover:text-white transition-all transform hover:-rotate-1"
                >
                    SEGUE O CAOS ->
                </a>
            </div>
            
            <div class="hidden md:block w-1/3 pt-12">
                 <div class="bg-ink p-2 transform rotate-3 shadow-hard-lg">
                    <div class="bg-paper border-2 border-ink p-4 flex flex-col items-center justify-center h-64">
                         <span class="text-8xl mb-4 font-headline">!</span>
                         <span class="font-headline text-xl text-center">ESTE ESPAÇO NÃO ESTÁ À VENDA</span>
                    </div>
                 </div>
            </div>
        </section>

        <section id="drops" class="mb-16">
            <div class="flex items-center gap-4 mb-12">
                 <h3 class="text-4xl md:text-6xl font-headline uppercase bg-white border-4 border-ink px-4 py-2 inline-block shadow-hard transform -rotate-2">
                    Latest Drops
                </h3>
                <span class="h-4 flex-grow bg-ink repeating-linear-gradient"></span>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                {posts.map((post: any) => (
                  <a href={`/post/${post.slug.current}`} class="group relative bg-white border-4 border-ink p-4 shadow-hard hover:shadow-hard-lg transition-all duration-300 transform hover:-translate-y-2">
                    
                    <div class="overflow-hidden border-2 border-ink mb-4 relative aspect-square">
                        {post.mainImage ? (
                          <img 
                            src={urlFor(post.mainImage).width(600).height(600).url()} 
                            alt={post.title}
                            class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-500 scale-100 group-hover:scale-110"
                          />
                        ) : (
                          <div class="w-full h-full flex items-center justify-center bg-gray-200 font-headline text-xl">NO SIGNAL</div>
                        )}
                        <div class="absolute top-0 left-0 bg-safety-orange text-white text-xs font-bold px-2 py-1 border-r-2 border-b-2 border-ink font-body">
                          {new Date(post.publishedAt).toLocaleDateString('pt-BR')}
                        </div>
                    </div>

                    <h4 class="text-2xl font-headline uppercase leading-none mb-2 group-hover:text-safety-orange transition-colors">
                        {post.title}
                    </h4>
                    
                    <p class="text-sm font-bold border-t-2 border-ink pt-2 mt-2 flex justify-between font-body">
                        <span>#POST</span>
                        <span>LER MAIS -></span>
                    </p>
                  </a>
                ))}
            </div>
        </section>
    </main>

    <Newsletter />

    <footer class="bg-ink text-paper border-t-4 border-safety-orange py-12 relative z-10 mt-auto">
        <div class="max-w-7xl mx-auto px-4 flex flex-col md:flex-row justify-between items-center gap-8">
            <div class="text-center md:text-left">
                <h2 class="text-5xl md:text-8xl font-headline tracking-tighter leading-none mb-2">
                    FEITO NO CAOS
                </h2>
                <p class="font-body text-safety-orange text-xl">// EST. 2025</p>
            </div>
            
            <div class="flex flex-col gap-4 text-center md:text-right">
                <a href="#" class="text-2xl font-headline hover:text-safety-orange hover:underline decoration-4 underline-offset-4 decoration-safety-orange transition-all">INSTAGRAM</a>
                <a href="#" class="text-2xl font-headline hover:text-safety-orange hover:underline decoration-4 underline-offset-4 decoration-safety-orange transition-all">EMAIL</a>
            </div>
        </div>
        <div class="text-center mt-12 text-xs opacity-50 font-body">
            NENHUM DIREITO RESERVADO. COPIE, ROUBE, REMIXE.
        </div>
    </footer>
    
    <div class="hidden lg:block absolute top-1/3 right-10 bg-safety-orange text-white p-4 font-headline text-2xl rotate-12 border-4 border-ink shadow-hard z-20 pointer-events-none mix-blend-multiply">
        NEW<br>DROP
    </div>
</BaseLayout>
